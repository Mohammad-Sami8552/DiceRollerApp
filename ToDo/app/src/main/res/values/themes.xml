<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Global text appearances -->
        <item name="textAppearanceBody1">@style/TextAppearance.ToDo.Body</item>
        <item name="textAppearanceBody2">@style/TextAppearance.ToDo.Body</item>
        <item name="textAppearanceButton">@style/TextAppearance.ToDo.Button</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.ToDo.Headline1</item>
        
        <!-- Material Components text appearances -->
        <item name="textInputStyle">@style/Widget.ToDo.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.ToDo.Button</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.ToDo.MaterialAlertDialog</item>
    </style>

    <style name="Theme.ToDo" parent="Base.Theme.ToDo" />

    <!-- Custom widget styles -->
    <style name="Widget.ToDo.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.ToDo.Input</item>
        <item name="android:textAppearance">@style/TextAppearance.ToDo.Input</item>
    </style>

    <style name="Widget.ToDo.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.ToDo.Button</item>
    </style>

    <style name="ThemeOverlay.ToDo.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.ToDo.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.ToDo.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.ToDo.Button</item>
    </style>

    <style name="MaterialAlertDialog.ToDo.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/TextAppearance.ToDo.Headline1</item>
    </style>
</resources>