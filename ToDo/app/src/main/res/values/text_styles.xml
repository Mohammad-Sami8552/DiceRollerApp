<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base text appearances -->
    <style name="TextAppearance.ToDo.Base" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Headings -->
    <style name="TextAppearance.ToDo.Headline1" parent="TextAppearance.ToDo.Base">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Body text -->
    <style name="TextAppearance.ToDo.Body" parent="TextAppearance.ToDo.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- Button text -->
    <style name="TextAppearance.ToDo.Button" parent="TextAppearance.ToDo.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Input text -->
    <style name="TextAppearance.ToDo.Input" parent="TextAppearance.ToDo.Base">
        <item name="android:textSize">16sp</item>
    </style>
</resources> 